params {
  read = false
  reads_prefix = "*"
  reads_extension = "fastq"
  genome = false
  fasta = "s3://ngi-igenomes/igenomes/Homo_sapiens/GATK/GRCh37/Sequence/WholeGenomeFasta/human_g1k_v37_decoy.fasta"
  outdir = "results"
}

/*
 * -----------------------------------------------------
 *  Configuration for using pre-indexed reference genomes 
 * -----------------------------------------------------
 *
 * The user can then specify --genome [key] or --fasta [path] and --ref [path]
 *
 *
 * NB: Not all available references are listed here!
 * Please feel free to add your own folder containing the indexes for your reference genome generated by Dragen
 */

params {
  // Command-line genome key
  genome = false
  // illumina iGenomes reference file paths on UPPMAX
  genomes {
    'GRCh37' {
      fasta = 's3://ngi-igenomes/igenomes/Homo_sapiens/GATK/GRCh37/Sequence/WholeGenomeFasta/human_g1k_v37_decoy.fasta'
      ref = 's3://lifebit-featured-datasets/modules/dragen/ref/GRCh37/'
    }
  }
}